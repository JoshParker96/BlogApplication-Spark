{{#partial "content"}}
<h1 xmlns="http://www.w3.org/1999/html">Detail Page</h1>
<ul>
    <li>
        <h1>{{blog.title}}</h1>
        <p>{{blog.entry}}<br> -post time: {{blog.date}}</p>
        <p>friends comments: {{blog.comments}}</p>
        <form action="/addComment/{{blog.slug}}" method="post">
            <input type="text" placeholder="name" name="username">
            <input type="text" placeholder="comment" name="comment">
            <button>comment</button>
        </form>
    </li>
</ul>

<a href="/edit/{{blog.slug}}">edit this blog</a>
<br>
<a href="/new">new blog</a>
<br>
<a href="/">home</a>
{{/partial}}

